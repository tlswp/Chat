{
  "name": "npm-automation-env",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "stylelint": {
      "patterns": [
        "src"
      ],
      "extensions": "css"
    },
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server src",
    "validate-html": "html-validate src",
    "stylelint": "stylelint src/**/*.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "run-webpack": "webpack --mode production",
    "build": "npm-run-all validate-html stylelint run-webpack",
    "start-express": "nodemon app.js"
  },
  "browserslist": "> 0.25%, not dead",
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@risingstack/react-easy-state": "^6.3.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "express": "^4.17.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "socket.io": "^2.4.0",
    "style-loader": "^1.1.3",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "terser-webpack-plugin": "^2.3.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "ws": "^7.2.5"
  },
  "dependencies": {}
}